      rel="stylesheet">
    <link rel="stylesheet" href="/css/dashboard.css">
    
</head>
<body>
    <div class="container2">
        <aside>
                <div class="top">
                    <div class="logo">
                        <img class="imgs" src="images\budget.png">
                        <h2 class="text-muted">MONGO <span class="headcolor">D-JANGO</span></h2>
                    </div>
                  
                        <div class="close" id="close-btn">
                                <span class="material-icons-sharp">close</span>
                        </div>
                    </div>
                    <div class="sidebar">
                        <a href="#" >
                            <span class="material-icons-sharp">grid_view</span>
                            <h3>Dashboard</h3>
                        </a>
                        <a class="active" href="transactions.html" >
                            <span class="material-icons-sharp">receipt_long</span>
                            <h3>Reoccuring Bills & Transactions</h3>
                        </a>
                        <a href="graph.html">
                            <span class="material-icons-sharp">insights</span>
                            <h3>Analytics</h3>
                            </a>
                        <a href="index.html">
                            <span class="material-icons-sharp"></span>
                            <h3>Logout</h3>
                        </a>
                    </div>
            </aside>
          
                
                <main>
                
                    <div class="sales" id="transactionbox">
                
                  <h1>Recurring bills & Transactions</h1>
                
                  <div id="recurringBills">
                    <h2>Recurring Bills</h2>
                    <br>
                    <label for="billName">Bill Name:</label>
                    <br>
                    <input class="input-section" type="text" id="billName">
                    <label for="amount">Amount:</label>
                    <input class="input-section" type="number" id="amount">
                    <button class="add-btn" onclick="addRecurringBill()">Add Bill</button>
                  </div>
                
                  <div id="transactions">
                    <h2>Transactions</h2>
                    <br>
                    <label for="transactionName">Transaction Name:</label>
                    <br>
                    <input class="input-section" type="text" id="transactionName">
                    <label for="transactionAmount">Amount:</label>
                    <input class="input-section" type="number" id="transactionAmount">
                    <button class="add-btn" onclick="addTransaction()">Record Transaction</button>
                  </div>
                </div>
            
                </main>
                <div class="right">
                    <div class="top">
                        <button id="menu-btn">
                                <span class="material-icons-sharp">menu</span>
                        </button>
                        <div class="theme-toggler">
                            <span class="material-icons-sharp active">light_mode</span>
                            <span class="material-icons-sharp">dark_mode</span>
                        </div>
                        <div class="profile">
                            <div class="info">
                                <p>Hey,User</p>
                                <small class="text-muted">Admin</small>
    
                            </div>
                            <div class="profile-photo">
                                
                                </lord-icon>
                            </div>
                        </div>
                    </div>
                </div>
                
                <script>
                  let recurringBills = [];
                  let transactions = [];
                
                  function addRecurringBill() {
                    const billName = document.getElementById('billName').value;
                    const amount = parseFloat(document.getElementById('amount').value);
                
                    if (billName && !isNaN(amount)) {
                      recurringBills.push({ billName, amount });
                      updateDisplay();
                      clearInputs(['billName', 'amount']);
                    } else {
                      alert('Please enter valid values for Bill Name and Amount.');
                    }
                  }
                
                  function addTransaction() {
                    const transactionName = document.getElementById('transactionName').value;
                    const transactionAmount = parseFloat(document.getElementById('transactionAmount').value);
                
                    if (transactionName && !isNaN(transactionAmount)) {
                      transactions.push({ transactionName, transactionAmount });
                      updateDisplay();
                      clearInputs(['transactionName', 'transactionAmount']);
                    } else {
                      alert('Please enter valid values for Transaction Name and Amount.');
                    }
                  }
                
                  function updateDisplay() {
                    const recurringBillsContainer = document.getElementById('recurringBills');
                    const transactionsContainer = document.getElementById('transactions');
                
                    recurringBillsContainer.innerHTML = '<h3>Recurring Bills</h3>';
                    for (const bill of recurringBills) {
                      recurringBillsContainer.innerHTML += `<p>${bill.billName}: $${bill.amount.toFixed(2)}</p>`;
                    }
                
                    transactionsContainer.innerHTML = '<h3>Transactions</h3>';
                    for (const transaction of transactions) {
                      transactionsContainer.innerHTML += `<p>${transaction.transactionName}: $${transaction.transactionAmount.toFixed(2)}</p>`;
                    }
                  }
                
                  function clearInputs(ids) {
                    for (const id of ids) {
                      document.getElementById(id).value = '';
                    }
                  }
                </script>
                
                </body>
